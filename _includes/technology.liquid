<div class="col technology">
  <a href="{% if technology.redirect %}{{ technology.redirect }}{% else %}{{ technology.url | relative_url }}{% endif %}">
    <!-- div class="card h-100 hoverable" -->
    {% if technology.logo %}
      {%
        include figure.liquid
        loading="eager"
        path=technology.logo
        sizes = "250px"
        alt=technology.label
        title=technology.label
        class="card-img-top"
      %}
    {% endif %}
  </a>
</div>
